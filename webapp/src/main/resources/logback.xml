<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %X{call-id} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="trace">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="org.flywaydb" level="INFO" />
    <logger name="io.ktor.server.routing.Routing" level="INFO" />
    <logger name="io.ktor.server.plugins" level="WARN" />
    <logger name="io.ktor.server.sessions" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="WARN" />
    <logger name="com.github.dockerjava" level="WARN" />
    <logger name="org.testcontainers" level="WARN" />
    <logger name="io.mockk" level="ERROR" />
</configuration>